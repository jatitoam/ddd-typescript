{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "src",
        "pretty": true,
        "inlineSourceMap": true,
        "target": "es2020",
        "outDir": "./dist",
        "lib": [
            "es6"
        ],
        "resolveJsonModule": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/Types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "!node_modules/@types",
        "./dist"
    ]
}